port {{ openvpn_port }}
proto {{ openvpn_protocol }}
dev tun

ca {{ openvpn_dir }}/server/ca.crt
cert {{ openvpn_dir }}/server/vpn-server.crt
key {{ openvpn_dir }}/server/vpn-server.key
dh {{ openvpn_dir }}/server/dh.pem

tls-auth {{ openvpn_dir }}/server/ta.key 0
cipher AES-256-CBC
auth SHA256

server {{ openvpn_ip }} {{ openvpn_netmask }}
ifconfig-pool-persist ipp.txt
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 1.0.0.1"
push "dhcp-option DNS 1.1.1.1"
push "dhcp-option DNS 8.8.8.8"
push "dhcp-option DNS 8.8.4.4"

keepalive 10 120
persist-key
persist-tun
comp-lzo

user nobody
group nogroup

status /var/log/openvpn/openvpn-status.log
log         /var/log/openvpn/openvpn.log
log-append  /var/log/openvpn/openvpn.log
verb 3
explicit-exit-notify 1